<%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>

<h1><%= @portfolio_item.title %></h1>

<em><%= @portfolio_item.subtitle %></em>

<p><%= @portfolio_item.body %></p>

<h2>Technologies Used:</h2>
<% @portfolio_item.technologies.each do |t| %>
<p><%= t.name %></p>
<% end%>

<%= link_to "Edit", edit_portfolio_url(@portfolio_item.id) if logged_in?(:site_admin)%>
<%= link_to 'Delete', portfolio_path(@portfolio_item.id), method: :delete, data: { confirm: 'Are you sure you want to delete this portfolio item?' } if logged_in?(:site_admin)%>