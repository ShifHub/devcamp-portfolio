<%= form_with(model: @portfolio_item) do |f| %>
  <div class='row'>
    <div class='col-md-6'>
      <div class='p-3'>
        <%= f.label :title, style: "display: block" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class='p-3'>
        <%= f.label :subtitle, style: "display: block" %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
    </div>

    <div class='col-md-6'>
      <div class='p-3'>
        <%= f.label :body, style: "display: block" %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>

  <hr>

  <h2 class='mt-2'>Technologies Used</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form| %>
      <div class='p-3'> 
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>