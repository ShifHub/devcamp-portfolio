<div class="col <%= "portfolio-card" if logged_in?(:site_admin) %>" data-id="<%= portfolio_item.id %>">
    <div class="card shadow-sm">
        <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), style: 'max-height: 300px !important;' %>
        <div class="card-body">
            <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
            <p><%= portfolio_item.subtitle %></p>
            <!-- <p class="card-text"><%= portfolio_item.body %></p> -->
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <% if logged_in?(:site_admin) %>
                        <%= link_to "Edit", edit_portfolio_url(portfolio_item.id), class: 'btn btn-sm btn-outline-secondary' %>
                        <%= link_to 'Delete', portfolio_path(portfolio_item.id), method: :delete, data: { confirm: 'Are you sure you want to delete this portfolio item?' }, class: 'btn btn-sm btn-outline-secondary'%>
                    <% end %>
                </div>
                <small class="text-body-secondary"> Published <%= distance_of_time_in_words(portfolio_item.created_at, Time.now)%> ago</small>
            </div>
        </div>
    </div>
</div>