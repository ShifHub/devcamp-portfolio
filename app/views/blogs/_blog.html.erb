<article class="blog-post mt-3" id="<%= dom_id blog %>">
  <h2 class="blog-post-title mb-3"><%= link_to blog.title.upcase, blog %></h2>
  <td> Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago by </td> <a href="#"> Author</a>
  <% if logged_in?(:site_admin) %>
    <p>
      <%= link_to "Edit", edit_blog_path(blog) %> / 
      <%= link_to "Delete", blog, method: :delete, data: {confirm: "Are you sure you want to delete?" } %> /
      <%= link_to blog.status.capitalize, toggle_status_blog_path(blog) %>
    </p>
  <% end %>
  <p><%= blog.body %></p>
  <p class='border-bottom mt-3'></p>
</article>